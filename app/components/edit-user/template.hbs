<form {{on 'submit' this.onSave}}>

  <div class='mb-3 row'>
    <AvatarChooser @onChange={{this.onAvatarChange}} />
  </div>

  <div class='mb-3 row'>
    <label for='username' class='col-sm-2 col-form-label'>Username</label>
    <div class='col-sm-10'>
      <input
        type='text'
        class='form-control'
        id='username'
        value={{this.userChangeset.username}}
        {{on 'input' this.onLoginChange}}
      />
    </div>
  </div>
  <div class='mb-3 row'>
    <label for='email' class='col-sm-2 col-form-label'>Email</label>
    <div class='col-sm-10'>
      <input
        type='text'
        class='form-control'
        id='email'
        value={{this.userChangeset.email}}
        {{on 'input' this.onEmailChange}}
      />
    </div>
  </div>

  <div class='mb-3 row'>
    <label for='photoURL' class='col-sm-2 col-form-label'>Photo URL</label>
    <div class='col-sm-10'>
      <input
        type='text'
        class='form-control'
        id='photoURL'
        value={{this.userChangeset.photoURL}}
        {{on 'input' this.onPhotoURLChange}}
      />
    </div>
  </div>
  <div class='mb-3 row'>
    <label for='inputPassword' class='col-sm-2 col-form-label'>Password</label>
    <div class='col-sm-10'>
      <input
        type='password'
        class='form-control'
        id='inputPassword'
        value={{this.userChangeset.password}}
        {{on 'input' this.onPasswordChange}}
      />
    </div>
  </div>
  <div class='mb-3 row'>
    <div class='d-flex'>
      <Shared::Button
        class='w-50 ms-1 btn-success'
        disabled={{this.shouldDisabledButton}}
        @label='Save'
        @type='submit'
      />

      <Shared::Button
        class='w-50 ms-1 btn-danger'
        disabled={{this.shouldDisabledButton}}
        @label='Cancel'
        @onClick={{this.rollback}}
      />
    </div>
  </div>
</form>