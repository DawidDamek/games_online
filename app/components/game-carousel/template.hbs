<div data-test-game-carousel class='text-center'>
  <div
    id='carouselExampleCaptions'
    class='carousel slide max-w-500 mx-auto'
    data-bs-ride='carousel'
  >
    <div class='carousel-inner'>
      <div class='carousel-item active'>
        <LinkTo @route='home.memory'>
          <img
            src='assets/images/memoryBig.png'
            class='d-block w-100'
            alt='memory'
          />
        </LinkTo>

      </div>
      <div class='carousel-item'>
        <LinkTo @route='home.whacamole'>
          <img
            src='assets/images/whacamoleBig.png'
            class='d-block w-100'
            alt='whacamole'
          />
        </LinkTo>
      </div>
      <div class='carousel-item'>
        <LinkTo @route='home.tictactoe'>
          <img
            src='assets/images/tictactoeBig.png'
            class='d-block w-100'
            alt='tictactoe'
          />
        </LinkTo>
      </div>
    </div>
    <button
      data-test-carousel-prev
      class='carousel-control-prev'
      type='button'
      data-bs-target='#carouselExampleCaptions'
      data-bs-slide='prev'
    >
      <span
        class='carousel-control-prev-icon btn-dark'
        aria-hidden='true'
      ></span>
      <span class='visually-hidden'>Previous</span>
    </button>
    <button
      data-test-carousel-next
      class='carousel-control-next'
      type='button'
      data-bs-target='#carouselExampleCaptions'
      data-bs-slide='next'
    >
      <span
        class='carousel-control-next-icon btn-dark'
        aria-hidden='true'
      ></span>
      <span class='visually-hidden'>Next</span>
    </button>
  </div>
  <LinkTo @route='home.games'>
    <Shared::Button
      class='btn-primary'
      @label='Check the games'
      disabled={{cannot 'press button'}}
    />
  </LinkTo>

</div>