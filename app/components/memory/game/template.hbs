<div class='text-center'>
  <Stopwatch
    @stopwatch={{this.stopwatch}}
    @start={{this.start}}
    @stop={{this.stop}}
    @reset={{this.reset}}
  />
  <h2>
    Your pairs:
    {{this.result}}
  </h2>

</div>
<div id='grid' class='mx-auto'>
  {{#each this.shuffledCards as |card|}}
    <img
      role='button'
      data-id={{card.cardId}}
      src='/assets/images/blank.png'
      alt={{card.name}}
      {{on 'click' this.flipCard}}
    />

  {{/each}}
</div>