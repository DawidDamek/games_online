<table class='table table-striped'>
  <thead>
    <tr>
      <th scope='col'>Id</th>
      <th scope='col'>Username</th>
      <th scope='col'>Password</th>
      <th scope='col'>Email</th>
      <th scope='col'>
        <Users::List::SortSwitcher
          @label='Memory top score'
          @sortParam={{@sortMemory}}
          @onToggle={{@onSortToggleMemory}}
        />
      </th>

      <th scope='col'>
        <Users::List::SortSwitcher
          @label='Whac
          a Mole top score'
          @sortParam={{@sortWhacamole}}
          @onToggle={{@onSortToggleWhac}}
        />
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each @users as |user|}}
      <tr>
        <td>{{user.id}}</td>
        <td><LinkTo @route='home.user.show' @model={{user}}><img
              class='avatar'
              src={{user.avatarURL}}
              alt='user avatar'
            />{{user.username}}</LinkTo></td>
        <td>{{user.password}}</td>
        <td>{{user.email}}</td>
        <td>{{user.memoryTopScore}}</td>
        <td>{{user.whacamoleTopScore}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>