<div class='grid'>
  {{#each @squares as |square index|}}
    {{#if square.isShow}}
      <img
        data-test-moleSquare
        id={{square.id}}
        class='square user-select-none'
        draggable='false'
        role='button'
        src='/assets/images/mole.jpg'
        alt='square'
        {{on 'click' @onCatch}}
      />
    {{else}}
      <img
        data-test-whiteSquare={{index}}
        id={{square.id}}
        class='square user-select-none pe-none'
        draggable='false'
        src='/assets/images/white.png'
        alt='square'
      />
    {{/if}}
  {{/each}}
</div>