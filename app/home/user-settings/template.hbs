{{page-title 'Settings'}}
<Header>Settings</Header>

<div class='container'>
  <div class='col-6 d-inline-block'>
    <User::Details @user={{this.model}} />
  </div>

  <div class='col-6 d-inline-block'>
    <form {{on 'submit' this.onSave}}>

      <div class='mb-3 row'>
        <label for='username' class='col-sm-2 col-form-label'>Username</label>
        <div class='col-sm-10'>
          <input
            type='text'
            class='form-control'
            id='username'
            placeholder='username'
            {{on 'input' this.onLoginChange}}
          />
        </div>
      </div>
      <div class='mb-3 row'>
        <label for='email' class='col-sm-2 col-form-label'>Email</label>
        <div class='col-sm-10'>
          <input
            type='text'
            class='form-control'
            id='email'
            placeholder='email'
            {{on 'input' this.onEmailChange}}
          />
        </div>
      </div>
      <div class='mb-3 row'>
        <AvatarChooser @onChange={{this.onAvatarChange}} />
      </div>

      <div class='mb-3 row'>
        <label for='photoURL' class='col-sm-2 col-form-label'>Photo URL</label>
        <div class='col-sm-10'>
          <input
            type='text'
            class='form-control'
            id='photoURL'
            placeholder='photoURL'
            {{on 'input' this.onPhotoURLChange}}
          />
        </div>
      </div>
      <div class='mb-3 row'>
        <label
          for='inputPassword'
          class='col-sm-2 col-form-label'
        >Password</label>
        <div class='col-sm-10'>
          <input
            type='password'
            class='form-control'
            id='inputPassword'
            placeholder='password'
            {{on 'input' this.onPasswordChange}}
          />
        </div>
      </div>
      <div class='mb-3 row'>
        <button type='submit' class='btn btn-success'>Save</button>
      </div>
    </form>
  </div>
</div>