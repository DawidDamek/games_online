{{page-title 'Login'}}
<Header>Login</Header>
<div class='container col-8 col-md-6 col-lg-6'>
  <form {{on 'submit' this.onSubmit}}>
    <div class='mb-3 row'>
      <label for='staticLogin' class='col-sm-2 col-form-label'>Username</label>
      <div class='col-sm-10'>
        <input
          id='staticLogin'
          type='text'
          class='form-control'
          placeholder='username'
          {{on 'input' this.onLoginChange}}
        />
      </div>
    </div>
    <div class='mb-3 row'>
      <label
        for='inputPassword'
        class='col-sm-2 col-form-label'
      >Password</label>
      <div class='col-sm-10'>
        <input
          id='inputPassword'
          type='password'
          class='form-control'
          placeholder='password'
          {{on 'input' this.onPasswordChange}}
        />
      </div>
    </div>
    <div class='mb-3 row'>
      <Shared::Button @type='submit' class='btn-success' @label='Login' />
    </div>
  </form>
  <div class='text-center'>
    <span>Don't have account? </span>
    <LinkTo @route='register'>
      <Shared::Button class='btn-primary' @label='Register' />
    </LinkTo>
    <span> or </span>
    <Shared::Button
      class='btn-primary'
      @label='Login with Google'
      @onClick={{this.onLoginOrRegisterAuth0}}
    />
  </div>
</div>

{{#if this.isShowSharedModal}}
  <Shared::Modal
    @title='Warning'
    @onClose={{this.onHideModal}}
    @modalInfoType={{true}}
  >
    <h4 class='text-danger'>
      Incorrect login or password
    </h4>
  </Shared::Modal>
{{/if}}