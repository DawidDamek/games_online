{{page-title 'Register'}}
<Header>Register</Header>

<div class='container'>
  <form {{on 'submit' this.onSubmit}}>

    <div class='mb-3 row'>
      <label for='username' class='col-sm-2 col-form-label'>Username</label>
      <div class='col-sm-10'>
        <input
          type='text'
          class='form-control'
          id='username'
          placeholder='username'
          {{on 'input' this.onLoginChange}}
        />
      </div>
    </div>
    <div class='mb-3 row'>
      <label for='email' class='col-sm-2 col-form-label'>Email</label>
      <div class='col-sm-10'>
        <input
          type='text'
          class='form-control'
          id='email'
          placeholder='email'
          {{on 'input' this.onEmailChange}}
        />
      </div>
    </div>
    <div class='mb-3 row'>
      <label for='avatar' class='col-sm-2 col-form-label d-block mx-auto'>Chose
        Your avatar:</label>
      <div id='avatar' class='scrollmenu my-3'>
        <input
          type='image'
          id='avatarURL1'
          src='/assets/images/icons/lion.png'
          value='/assets/images/icons/lion.png'
          alt='lion'
          {{on 'click' this.onAvatarChange}}
        />
        <input
          type='image'
          id='avatarURL2'
          src='/assets/images/icons/pig.png'
          value='/assets/images/icons/pig.png'
          alt='pig'
          {{on 'click' this.onAvatarChange}}
        />
        <input
          type='image'
          id='avatarURL3'
          src='/assets/images/icons/bear.png'
          value='/assets/images/icons/bear.png'
          alt='bear'
          {{on 'click' this.onAvatarChange}}
        />
        <input
          type='image'
          id='avatarURL4'
          src='/assets/images/icons/bunny.png'
          value='/assets/images/icons/bunny.png'
          alt='bunny'
          {{on 'click' this.onAvatarChange}}
        />
        <input
          type='image'
          id='avatarURL5'
          src='/assets/images/icons/cat.png'
          value='/assets/images/icons/cat.png'
          alt='cat'
          {{on 'click' this.onAvatarChange}}
        />
        <input
          type='image'
          id='avatarURL6'
          src='/assets/images/icons/cock.png'
          value='/assets/images/icons/cock.png'
          alt='cock'
          {{on 'click' this.onAvatarChange}}
        />
        <input
          type='image'
          id='avatarURL7'
          src='/assets/images/icons/dragon.png'
          value='/assets/images/icons/dragon.png'
          alt='dragon'
          {{on 'click' this.onAvatarChange}}
        />
        <input
          type='image'
          id='avatarURL8'
          src='/assets/images/icons/elephant.png'
          value='/assets/images/icons/elephant.png'
          alt='elephant'
          {{on 'click' this.onAvatarChange}}
        />
        <input
          type='image'
          id='avatarURL9'
          src='/assets/images/icons/fox.png'
          value='/assets/images/icons/fox.png'
          alt='fox'
          {{on 'click' this.onAvatarChange}}
        />
        <input
          type='image'
          id='avatarURL10'
          src='/assets/images/icons/giraffe.png'
          value='/assets/images/icons/giraffe.png'
          alt='giraffe'
